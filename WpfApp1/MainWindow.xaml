<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ksiazka" Height="450" Width="900">
    <StackPanel Margin="20">

        <TextBlock Text="{Binding Tytul}"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <Button Content="&lt;&lt;&lt;"
                    Width="60"
                    Height="200"
                    Margin="10"
                    Click="Poprzednia_Click"/>

            <Border Width="300" Height="200" BorderBrush="Black" BorderThickness="1" Margin="10">
                <TextBlock Text="{Binding LewaStrona}"
                           TextWrapping="Wrap"
                           Padding="10"/>
            </Border>

            <Border Width="300" Height="200" BorderBrush="Black" BorderThickness="1" Margin="10">
                <TextBlock Text="{Binding PrawaStrona}"
                           TextWrapping="Wrap"
                           Padding="10" Margin="0,0,0,-1"/>
            </Border>

            <Button Content="&gt;&gt;&gt;"
                    Width="60"
                    Height="200"
                    Margin="10"
                    Click="Nastepna_Click"/>

        </StackPanel>

        <TextBlock Text="{Binding Licznik}"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>

    </StackPanel>
</Window>
